---
import Date from "./Date.astro";
import { Picture } from "astro:assets";

const { post } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article>
  <a href={`/blog/${post.slug}/`}>
    <Picture
      src={coverImage}
      alt={coverAlt}
      widths={[350, 550, 750, 900]}
      sizes={`(max-width: 500px) 350px, (max-width: 768px) 550px, (max-width: 1024px) 750px, (min-width: 1024px) 900px`}
      formats={["avif", "webp"]}
      loading={"eager"}
      fetchpriority={"high"}
      decoding={"sync"}
      class="bg-gray-300 shadow rounded object-cover w-full mb-4 aspect-video"
    />
  </a>

  <Date date={pubDate} class="text-lg lg:text-xl" />

  <h2 class="mt-3">
    <a
      href={`/blog/${post.slug}/`}
      class="text-2xl lg:text-3xl font-serif font-semibold">{title}</a
    >
  </h2>

  <div class="mt-4 text-lg md:text-xl">
    {summary}
  </div>
</article>
