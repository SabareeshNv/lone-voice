---
import Date from "./Date.astro";
import { Picture } from "astro:assets";

const { post } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article>
  <a href={`/blog/${post.slug}/`}>
    <Picture
      src={coverImage}
      alt={coverAlt}
      widths={[350, 500, 750]}
      sizes={`(max-width: 640px) 350px, (max-width: 768px) 500px, (min-width: 769px) 750px`}
      formats={["avif", "webp"]}
      loading={"eager"}
      fetchpriority={"high"}
      decoding={"sync"}
      class="bg-gray-300 shadow rounded object-cover w-full mb-4 lg:h-[30rem]"
    />
  </a>

  <Date date={pubDate} class="text-lg lg:text-xl" />

  <h2 class="mt-3">
    <a
      href={`/blog/${post.slug}/`}
      class="text-2xl lg:text-3xl xl:text-4xl font-serif font-bold">{title}</a
    >
  </h2>

  <div class="mt-6 text-lg md:text-2xl">
    {summary}
  </div>
</article>
