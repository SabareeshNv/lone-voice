---
import Date from "./Date.astro";
import { Picture } from "astro:assets";

const { post } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article class="mb-6">
  <a href={`/blog/${post.slug}/`}>
    <Picture
      src={coverImage}
      alt={coverAlt}
      widths={[300, 600, 900, coverImage.width]}
      sizes={`(max-width: 360px) 300px, (max-width: 720px) 600px, (max-width: 1600px) 900px, ${coverImage.width}px`}
      formats={["avif", "webp"]}
      class="bg-gray-200 shadow rounded object-cover w-full mb-4 lg:h-[20rem]"
    />
  </a>

  <Date date={pubDate} class="text-lg lg:text-xl" />

  <h2 class="mt-3">
    <a
      href={`/blog/${post.slug}/`}
      class="text-2xl lg:text-3xl font-serif font-bold">{title}</a
    >
  </h2>

  <div class="mt-6 text-lg md:text-xl">
    {summary}
  </div>
</article>
