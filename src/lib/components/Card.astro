---
import ResponsiveImage from "./ResponsiveImage.astro";
import Date from "./Date.astro";

const { post } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article class="mb-6">
  <a href={`/blog/${post.slug}/`}>
    <ResponsiveImage
      src={coverImage}
      alt={coverAlt}
      sizes={[400, 600, 800]}
      class="bg-gray-200 shadow rounded object-cover w-full mb-4 lg:h-[18rem]"
    />
  </a>

  <Date date={pubDate} class="text-lg lg:text-xl" />

  <h2 class="mt-3">
    <a
      href={`/blog/${post.slug}/`}
      class="text-2xl lg:text-3xl font-serif font-bold">{title}</a
    >
  </h2>

  <div class="mt-6 text-lg md:text-xl">
    {summary}
  </div>
</article>
